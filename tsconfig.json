{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 20",
    "_version": "20.1.0",

    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./",
		"baseUrl": ".",
        "lib": ["es2023", "dom"],
        "module": "esnext",
        "target": "es2022",
        "strict": false,
		"declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": [
            "node",
            "express",
            "cors",
            "jsonwebtoken",
            "node-cron",
            "nodemailer"
        ]
    },
	"include": ["./src"],
	"exclude": ["node_modules"]
}
